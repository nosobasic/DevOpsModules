# DevOps Modules - Revenue Ripple Integration Configuration

# ============================
# Revenue Ripple Integration
# ============================

# Base URL of your Revenue Ripple installation
REACT_APP_REVENUE_RIPPLE_URL=https://your-revenue-ripple.com

# API key generated from your Revenue Ripple admin panel
# This should be configured in your Revenue Ripple admin settings under DevOps Modules
REACT_APP_REVENUE_RIPPLE_API_KEY=your-generated-api-key

# Shared webhook secret for secure communication
# Configure the same secret in both systems
REACT_APP_WEBHOOK_SECRET=your-shared-webhook-secret

# Admin panel path (usually /admin)
REACT_APP_ADMIN_PANEL_URL=/admin

# Integration mode: embedded | standalone | iframe
REACT_APP_INTEGRATION_MODE=embedded

# ============================
# Development Settings
# ============================

# Enable development mode features
REACT_APP_DEBUG_MODE=false

# Mock data for development (when Revenue Ripple is not available)
REACT_APP_USE_MOCK_DATA=false

# Development server port
PORT=3001

# ============================
# Optional Service API Keys
# ============================
# These are typically managed through Revenue Ripple admin panel
# but can be overridden for development

# Google Analytics (optional - usually synced from Revenue Ripple)
REACT_APP_GA_TRACKING_ID=

# Stripe (optional - usually synced from Revenue Ripple)
REACT_APP_STRIPE_PUBLISHABLE_KEY=

# Mailchimp (optional - usually synced from Revenue Ripple)
REACT_APP_MAILCHIMP_API_KEY=

# Sentry for error tracking (optional)
REACT_APP_SENTRY_DSN=

# ============================
# Agent Configuration
# ============================

# Default agent poll interval (in seconds)
REACT_APP_AGENT_POLL_INTERVAL=300

# Maximum number of concurrent agents
REACT_APP_MAX_CONCURRENT_AGENTS=10

# Agent timeout (in seconds)
REACT_APP_AGENT_TIMEOUT=30

# ============================
# Security Settings
# ============================

# CORS allowed origins (comma-separated)
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=30

# ============================
# Features Configuration
# ============================

# Enable/disable specific agent types
REACT_APP_ENABLE_AB_TESTING=true
REACT_APP_ENABLE_DEPLOYMENT=true
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_ANALYTICS=true

# Enable experimental features
REACT_APP_EXPERIMENTAL_FEATURES=false